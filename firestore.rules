rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Regla por defecto para toda la base
    match /{document=**} {
      // Lectura para todos
      allow read: if true;

      // Escritura solo si el usuario est√° autenticado
      allow write: if request.auth != null;
    }
  }
}